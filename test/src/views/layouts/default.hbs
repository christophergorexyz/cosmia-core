<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{{title}} | {{site.title}}</title>
    <meta name="description" content="{{description}}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="canonical" href="{{site.domain}}{{page-path}}">
</head>

<body class="{{page-class}}">
    <header>
        HEADER
        {{>navigation}}
    </header>
    <main>
        {{{ body }}}
    </main>
    <footer>
        FOOTER
    </footer>
    {{!-- this should go *below* third party libraries and your main script in order to ensure everything is correctly defined and runs after html loads --}}
    {{{ cosmia-script }}}
    <script type="application/json" class="page-data">
        {{{ json cosmia-data }}}
    </script>
</body>

</html>
